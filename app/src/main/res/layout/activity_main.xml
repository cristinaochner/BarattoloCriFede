<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F8F5"
    android:backgroundTint="#EDF3ED"
    android:foregroundTint="#FFFFFF">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        tools:layout_editor_absoluteY="73dp">

        <LinearLayout
            android:id="@+id/layot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/testoIniziale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:gravity="center"
                android:text="Benvenuti nel Contatore-Barattolo della Cri e del Fede "
                android:textColor="#9C27B0"
                android:textColorHighlight="#9C27B0"
                android:textColorHint="#9C27B0"
                android:textIsSelectable="true"
                android:textSize="30sp"
                android:visibility="visible"
                tools:text="Benvenuti nel Contatore-Barattolo della Cri e del Fede "
                tools:visibility="visible" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/testoIniziale2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:gravity="center"
                android:text="Cristina"
                android:textColor="#9C27B0"
                android:textColorHighlight="#9C27B0"
                android:textColorHint="#9C27B0"
                android:textIsSelectable="true"
                android:textSize="30sp"
                android:visibility="visible"
                tools:text="Cristina"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerPadding="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:textSize="36sp" />

                <EditText
                    android:id="@+id/editPagC"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#8BC34A"
                    android:ems="10"
                    android:foregroundTint="#2A782D"
                    android:gravity="center"
                    android:inputType="numberSigned"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    tools:text="123" />

                <EditText
                    android:id="@+id/editDebC"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberSigned"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    tools:text="123" />

                <Button
                    android:id="@+id/btnPC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+"
                    android:textSize="36sp" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/testoIniziale3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:gravity="center"
                android:text="Federico"
                android:textColor="#9C27B0"
                android:textColorHighlight="#9C27B0"
                android:textColorHint="#9C27B0"
                android:textIsSelectable="true"
                android:textSize="30sp"
                android:visibility="visible"
                tools:text="Federico"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:textSize="36sp" />

                <EditText
                    android:id="@+id/editPagF"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberSigned"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    tools:text="123" />

                <EditText
                    android:id="@+id/editDebF"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="numberSigned"
                    android:textAllCaps="false"
                    android:textSize="24sp"
                    tools:text="123" />

                <Button
                    android:id="@+id/btnPF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+"
                    android:textSize="36sp" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>